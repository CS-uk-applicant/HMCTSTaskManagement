@page
@model CodeProject.Pages.CreateTaskModel
@{
	ViewData["Title"] = "Create new task";
}

<h2> Create new task </h2>

<form method="post">
    <div class="form-group">
        <label asp-for="TaskDto.Title"></label>
        <input asp-for="TaskDto.Title" class="form-control" />
        <span asp-validation-for="TaskDto.Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TaskDto.Description"></label>
        <textarea asp-for="TaskDto.Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="TaskDto.Status"></label>
        <select asp-for="TaskDto.Status" class="form-control">
            <option value="New">New</option>
            <option value="In Progress">In Progress</option>
            <option value="Completed">Completed</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="TaskDto.DueDateTime"></label>
        <input asp-for="TaskDto.DueDateTime" type="datetime-local" class="form-control" />
        <span asp-validation-for="TaskDto.DueDateTime" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Create Task</button>
    <a asp-page="/Index" class="btn btn-secondary mt-3">Cancel</a>
</form>

<partial name="_ValidationScriptsPartial" />